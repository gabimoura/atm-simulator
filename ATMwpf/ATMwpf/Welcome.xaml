<Window x:Class="ATMwpf.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATMwpf"
        mc:Ignorable="d"
        Title="Welcome" Height="300" Width="300">
    <Grid>
        <Label x:Name="CajuBank" Content="Caju Bank" Margin="0,48,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" FontSize="26.667"/>
        <Button x:Name="LoginButton" Content="Login" Margin="0,148,0,73" Width="75" VerticalContentAlignment="Center" Click="LoginButton_Click"/>
        <Label x:Name="CajuBank_Copy" Content="To use this terminal, you must login." Margin="0,98,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" FontSize="9.333"/>

    </Grid>
</Window>
